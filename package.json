{
	"name": "twitter-filter",
	"displayName": "Twitter filter",
	"type": "module",
	"version": "0.0.1",
	"description": "Curate your Twitter feed.",
	"author": "Miguel Piedrafita",
	"scripts": {
		"dev": "plasmo dev",
		"build": "plasmo build",
		"package": "plasmo package"
	},
	"dependencies": {
		"@anthropic-ai/sdk": "^0.27.3",
		"@plasmohq/messaging": "^0.6.2",
		"@plasmohq/storage": "^1.12.0",
		"ollama": "^0.5.9",
		"plasmo": "0.89.2",
		"react": "18.2.0",
		"react-dom": "18.2.0"
	},
	"devDependencies": {
		"@types/chrome": "0.0.271",
		"@types/node": "22.6.1",
		"@types/react": "18.2.48",
		"@types/react-dom": "18.2.18",
		"prettier": "^3.3.3",
		"prettier-plugin-sort-imports-desc": "^1.0.0",
		"typescript": "5.3.3"
	},
	"prettier": {
		"semi": false,
		"tabWidth": 4,
		"useTabs": true,
		"printWidth": 120,
		"singleQuote": true,
		"arrowParens": "avoid",
		"trailingComma": "es5",
		"bracketSpacing": true,
		"plugins": [
			"prettier-plugin-sort-imports-desc"
		]
	},
	"manifest": {
		"host_permissions": [
			"https://*/*"
		],
		"permissions": [
			"unlimitedStorage"
		]
	}
}
